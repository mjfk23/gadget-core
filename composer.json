{
  "name": "mjfk23/gadget-core",
  "description": "Gadget is a PHP micro framework of various bits of code I've written over the years",
  "type": "library",
  "keywords": [
    "framework",
    "micro"
  ],
  "homepage": "https://github.com/mjfk23/gadget-core",
  "license": "MIT",
  "authors": [
    {
      "name": "Melody Kimball",
      "role": "lead"
    }
  ],
  "support": {
    "issues": "https://github.com/mjfk23/gadget-core/issues",
    "wiki": "https://github.com/mjfk23/gadget-core/wiki",
    "source": "https://github.com/mjfk23/gadget-core"
  },
  "require": {
    "php": ">=8.1",
    "ext-json": "*",
    "psr/cache": "^3.0",
    "symfony/config": "6.4.*",
    "symfony/dependency-injection": "6.4.*",
    "symfony/http-kernel": "6.4.*",
    "symfony/yaml": "6.4.*"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.12",
    "phpstan/phpstan-strict-rules": "^1.6",
    "phpstan/extension-installer": "^1.4",
    "squizlabs/php_codesniffer": "^3.10"
  },
  "autoload": {
    "psr-4": {
      "Gadget\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Gadget\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    },
    "sort-packages": true,
    "optimize-autoloader": true,
    "apcu-autoloader": true
  },
  "replace": {
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php72": "*",
    "symfony/polyfill-php73": "*",
    "symfony/polyfill-php74": "*",
    "symfony/polyfill-php80": "*",
    "symfony/polyfill-php81": "*"
  },
  "scripts": {
    "phpcs": "vendor/bin/phpcs",
    "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon",
    "psalm": "vendor/bin/psalm --no-cache",
    "phpunit": "vendor/bin/phpunit"
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "require": "6.4.*"
    }
  }
}
